      <!-- titulo dinamico -->
      <div class="title"><%- content %></div>

      <!-- fim titulo dinamico -->
      <div class="content-chat">
        <div id="history">
          <!-- adicionando o hystory chat -->
          <% if (chats && chats.length > 0) { %> <% chats.forEach(e => { %>
          <div id="perg" class="msgm-group">
            <p><%- e.user_chat %></p>
          </div>
          <div id="resp" class="msgm-group">
            <img src="/imgs/logo.png" alt="logo ia" />
            <div id="text-ai"><%- e.osvaldo_chat %></div>
          </div>
          <% }) %> <% } else { %>
