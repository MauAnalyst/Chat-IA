        <form id="msg-user" enctype="multipart/form-data">
          <input type="hidden" id="userId" name="userId" value="MBS1729" />
          <input
            type="hidden"
            id="subject"
            name="subject"
            value="<%= title %>"
          />
          <div class="inputs">
            <div id="preview-image" style="display: none">
              <span class="material-symbols-outlined" id="close">close</span>
              <img src="null" alt="preview-off" />
            </div>
            <input
              type="text"
              id="user_input"
              name="user_input"
              maxlength="150"
              placeholder="Envie uma menssagem para Osvaldo..."
              required
            />
            <div id="upload-image">
              <label for="image"
                ><span class="material-symbols-outlined">upload</span>carregar
                imagem</label
              >
            </div>

            <input
              type="file"
              name="image"
              id="image"
              accept="image/*"
              style="display: none"
            />
          </div>
          <button type="submit" id="to-send">
            <span class="material-symbols-outlined"> arrow_right_alt </span>
          </button>
        </form>
